        background-color: violet;
        margin: auto;
        width: 100%;
        height: 7rem;
        display: flex;
        justify-content: center;
        align-items: center;

    }


    .button{

        font-size: 2rem;
    font-weight: bold;
    border-radius: 1rem;
    padding: 0.5rem;
